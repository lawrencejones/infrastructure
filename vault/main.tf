################################################################################
# Backend
################################################################################

terraform {
  backend "gcs" {
    bucket  = "lawrjone-tfstate"
    prefix  = "terraform/state/vault"
    project = "lawrjone"
  }
}

################################################################################
# Provider
################################################################################

provider "google" {
  region  = "${var.region}"
  version = "1.20"
  project = "${var.default_project}"
}

################################################################################
# KMS
################################################################################

resource "google_kms_key_ring" "vault" {
  name     = "vault"
  location = "${var.region}"
}
